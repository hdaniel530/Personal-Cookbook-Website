<h2>My Food Gallery!</h2>
{{#if images}}
<div class = "images">
  {{#each images}}
  <div class = "image">
  <img src="/image/{{icon.id}}" id="galleryimages" width="100" height="100"/><br><br>
  {{caption}}
  </div>
  {{/each}}
</div>
{{else}}
  No images yet!
{{/if}}


<h3>Add to Gallery!</h3>
{{error}}
<form method="POST" action="/mygallery" enctype="multipart/form-data" id="cookbook">
  <img id="icon" width="100" height="100"/><br><br>
  <input type="file" name="galleryimages" accept="image/*" onchange="document.getElementById('icon').src = window.URL.createObjectURL(this.files[0])"><br><br>
  Caption: <input type="text" name="caption"><br><br>
  <button type="submit" class="btn btn-info">Add!</button>
</form>

