<h2>My Cookbooks!</h2>

{{#if cookbooks}}
<div class="cookbooks">
  {{#each cookbooks as |c|}}
    <div class = "cookbook">
    {{#if c.icon}}
      <img src="/image/{{c.icon.id}}" id="cookbookicon" width="100" height="100"/><br><br>
    {{else}}
      <img id="cookbookicon" width="100" height="100"/><br><br>
    {{/if}}
    <h6><a href=/cookbook/{{c.slug}}>{{c.title}}</a></h6>
    {{#if c.tags}}
      TAGS:
      {{#each c.tags as |tag|}}
      <form method="GET" action="/search">
      <input type="hidden" name="search" value="{{tag}}">
      <button type="submit" class="btn btn-info">{{tag}}</button>
      </form>
      {{/each}}<br><br>
      {{else}}
      <br>No tags!<br><br>
    {{/if}}
  </div>
  {{/each}}<br>
</div>
{{else}}
  No cookbooks yet!
{{/if}}


<h3>Create Cookbook!</h3>
<form method="GET" action="/cookbook/create"  id="cookbook">
  <button type="submit" class="btn btn-info">Create!</button>
</form>

