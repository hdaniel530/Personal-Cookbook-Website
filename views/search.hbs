{{#if items}}
<div class = "results">
  {{#each items as |item|}}
  <div class = "result">
    {{#if item.icon}}
      <img src="/image/{{item.icon.id}}" id="itemicon" width="100" height="100"/><br><br>
    {{else}}
      <img id="itemicon" width="100" height="100"/><br><br>
    {{/if}}
    {{item.title}}
    {{item.name}}
    {{#if item.tags}}
      <br>TAGS:
      {{#each item.tags as |tag|}}
        <form method="GET" action="/search">
        <input type="hidden" class="form-control" name ="search" value="{{tag}}">
        <button type="submit" class="btn btn-info">{{tag}}</button>
        </form>
      {{/each}}<br>
    {{else}}
     <br>No tags yet!<br>
    {{/if}}
    {{#if item.recipe}}
    Recipe!<br>
    {{else}}
      Cookbook!<br>
    {{/if}}
  </div>
  {{/each}}
</div>
{{else}}
No items for this tag yet!
{{/if}}

